{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'kitcommand/iframe.body.twig') %}
{% block title %}{{ title }}{% endblock %}
{% block description %}{{ 'Message from the kitFramework Event application'|trans }}{% endblock %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Event/Template/default/command/css/command.css" media="screen, projection" />
{% endblock stylesheet %}
{% block content %}
  <!-- {{ _self.getTemplateName() }} -->  
  <div id="message-body">
    <h2>{{ title }}</h2>
    <div class="message_message">{{ message }}</div>
  </div>
{% endblock %}

